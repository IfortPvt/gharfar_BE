{
  "info": {
    "_postman_id": "b1b2b3b4-0000-0000-0000-000000000002",
    "name": "Gharfar Property Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "auth_token", "value": "<JWT_TOKEN>" }
  ],
  "item": [
    {
      "name": "Create Property Listing",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Modern Loft\",\n  \"description\": \"A beautiful modern loft in the city center.\",\n  \"address\": \"123 Main St\",\n  \"city\": \"New York\",\n  \"state\": \"NY\",\n  \"country\": \"USA\",\n  \"zipcode\": \"10001\",\n  \"location\": {\n    \"type\": \"Point\",\n    \"coordinates\": [-73.935242, 40.73061]\n  },\n  \"price\": 250,\n  \"images\": [\"<IMAGE_ID>\"],\n  \"amenities\": [\"<AMENITY_ID>\"],\n  \"guests\": 4,\n  \"bedrooms\": 2,\n  \"beds\": 2,\n  \"bathrooms\": 1,\n  \"propertyType\": \"Apartment\",\n  \"roomType\": \"Entire place\",\n  \"houseRules\": \"No smoking\",\n  \"highlights\": [\"Great location\", \"Family friendly\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/properties",
          "host": ["{{base_url}}"],
          "path": ["api", "properties"]
        }
      }
    },
    {
      "name": "Get All Properties",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/properties",
          "host": ["{{base_url}}"],
          "path": ["api", "properties"]
        }
      }
    },
    {
      "name": "Get Property By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/properties/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "properties", ":id"]
        }
      }
    }
  ]
}
